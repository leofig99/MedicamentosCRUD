@model List<MedicamentosCRUD.Models.ViewModels.ListMedicamentoViewModel>
@{
    ViewBag.Title = "Listado de medicamentos";
    //IIDMEDICAMENTO|NOMBRE|CONCENTRACION|IIDFORMAFARMACEUTICA|PRECIO|STOCK|PRESENTACION|BHABILITADO
}

<h2>Listado de medicamentos</h2>

<div class="row" style="text-align:right">
    <a href="~/Medicamento/Agregar" class="btn btn-primary">Agregar</a>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="container">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Concentración</th>
                                <th>Id Forma Farmaceutica</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th>Presentación</th>
                                <th>Habilitado</th>
                                <th>Editar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var medicamento in Model)
                            {
                                <tr>
                                    <td>@medicamento.Iidmedicamento</td>
                                    <td>@medicamento.Nombre</td>
                                    <td>@medicamento.Concentracion</td>
                                    <td>@medicamento.Iidformafarmaceutica</td>
                                    <td>@medicamento.Precio</td>
                                    <td>@medicamento.Stock</td>
                                    <td>@medicamento.Presentacion</td>
                                    <td>@medicamento.Bhabilitado</td>
                                    <td>
                                        <a href="~/Medicamento/Editar/@medicamento.Iidmedicamento"><span class="glyphicon glyphicon-cog"></span></a>
                                    </td>
                                    <td>

                                        <a href="~/Medicamento/Eliminar/@medicamento.Iidmedicamento"><span class="glyphicon glyphicon-trash"></span> </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>